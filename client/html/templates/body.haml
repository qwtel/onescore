%template(name='body')
  .navbar.navbar-fixed-top.navbar-inverse
    .navbar-inner
      %header.container
        {{> header }}
    .progress
      .bar(style="width: {{progress}}%")
    {{#if progressText}}
    %span.label {{progressText}}
    {{/if}}

  {{#if currentUser}}
  #content.container
    {{> page }}
  {{/if}}

  #modal.modal.hide.fade.hidden-phone
    {{> accomplishModal}}
