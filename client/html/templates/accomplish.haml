%template(name='accomplish')
  .linebreak
    %nav.nav.nav-tabs 
      <li class="{{isActive "story" "text"}}">
      %a(href="/achievements/{{_id}}/accomplish/text")
        %i.icon-align-left
        Text
      </li>

      <li class="{{isActive "story" "picture"}}">
      %a(href="/achievements/{{_id}}/accomplish/picture")
        %i.icon-picture
        Picture
      </li>

      <li class="{{isActive "story" "video"}}">
      %a(href="/achievements/{{_id}}/accomplish/video")
        %i.icon-film
        Video
      </li>

      <li class="{{isActive "story" "link"}}">
      %a(href="/achievements/{{_id}}/accomplish/link")
        %i.icon-bookmark
        Link
      </li>

  {{#if session "story"}}
  {{#if equals "story" "text"}}
  .editor
    %div(id="toolbar-{{_id}}")
    %textarea.ta100(id="editor-{{_id}}" rows="10") {{story}}
    %span.help-block<
      %strong HINT:
      You can style your post using
      %a(href="http://daringfireball.net/projects/markdown/" target="_blank") Markdown
      \.
  .preview.hide(id="preview-{{_id}}")

  -#%div.control-group 
    %label.control-label Tags
    %div.controls                 
      {{#with tags}}
      {{> tags}}
      {{/with}}

  %footer.form-actions
    {{#if accomplishment}}
    %a.btn.btn-large.create(style="margin-left: -20px") Save
    {{else}}
    %a.btn.btn-success.btn-large.create(style="margin-left: -20px") Accomplish
    {{/if}}
    %a.btn.btn-large.editor Preview
    %a.btn.btn-large.preview.hide Edit
  {{callback}}
  {{/if}}

  {{else}}
  -#.btn-toolbar
    .btn-group
      %a(href="/achievements/{{_id}}/accomplish/text" class="btn btn-large" title="Text")
        %i.icon-align-left
      %a(href="/achievements/{{_id}}/accomplish/picture" class="btn btn-large" title="Picture")
        %i.icon-picture
      %a(href="/achievements/{{_id}}/accomplish/video" class="btn btn-large" title="Video")
        %i.icon-film
      %a(href="/achievements/{{_id}}/accomplish/link" class="btn btn-large" title="Link")
        %i.icon-bookmark
      -#%button.btn(title="Audio") 
        %i.icon-headphones

  {{#if accomplishment}}
  %a.btn.btn-danger.btn-large.uncreate Unaccomplish
  {{else}}
  %a.btn.btn-success.btn-large.create Accomplish
  {{/if}}
  {{/if}}

