%template(name='accomplish')
  -#.linebreak
    %nav.nav.nav-tabs 
      <li class="{{isActive "story" "text"}}">
      %a(href="/achievements/{{_id}}/accomplish/text")
        %i.icon-align-left
        Text
      </li>

      <li class="{{isActive "story" "picture"}}">
      %a(href="/achievements/{{_id}}/accomplish/picture")
        %i.icon-picture
        Picture
      </li>

      <li class="{{isActive "story" "video"}}">
      %a(href="/achievements/{{_id}}/accomplish/video")
        %i.icon-film
        Video
      </li>

      <li class="{{isActive "story" "link"}}">
      %a(href="/achievements/{{_id}}/accomplish/link")
        %i.icon-bookmark
        Link
      </li>

  {{#if session "story"}}
  {{#with newAccomplishment}}
  {{#if equals "story" "text"}}

  .editor
    #toolbar

    {{#isolate}}
    %textarea#editor.ta100.lazy(name="story" rows="10") {{{story}}}
    {{/isolate}}

    %span.help-block<
      %strong HINT:
      You can style your post using
      %a(href="http://daringfireball.net/projects/markdown/" target="_blank") Markdown
      \.
  #preview.preview.story.hide

  -#%div.control-group 
    %label.control-label Tags
    %div.controls                 
      {{#with tags}}
      {{> tags}}
      {{/with}}

  {{else}}
  {{#if equals "story" "picture"}}

  .editor
    %label Upload a Photo:
    .well.well-small.breadcrumb
      %input#upload.input-file(type="file")/
      %ul#thumbnails.thumbnails

    %label Caption: (optional)
    #toolbar

    {{#isolate}}
    %textarea#editor.ta100.lazy(name="story" rows="4") {{story}}
    {{/isolate}}

    %span.help-block<
      %strong HINT:
      You can style your post using
      %a(href="http://daringfireball.net/projects/markdown/" target="_blank") Markdown
      \.

  #list.preview.hide
  #preview.preview.story.hide

  {{else}}
  {{#if equals "story" "link"}}

  .editor
    %label Link:
    %input.i100(type="text")

    %label Caption: (optional)
    #toolbar
    %textarea#editor.ta100(rows="4") {{story}}

    %span.help-block<
      %strong HINT:
      You can style your post using
      %a(href="http://daringfireball.net/projects/markdown/" target="_blank") Markdown
      \.
  #preview.preview.story.hide
  {{/if}}
  {{/if}}
  {{/if}}
  {{/with}}

  %footer.form-actions
    {{#if accomplishment}}
    %a.btn.create(style="margin-left: -20px") Save
    {{else}}
    %a.btn.btn-success.create(style="margin-left: -20px") Accomplish
    {{/if}}
    %a.btn.editor Preview
    %a.btn.preview.hide Edit

  {{else}}
  .btn-toolbar
    .btn-group
      {{#if accomplishment}}
      %a.btn.btn-danger.uncreate Unaccomplish
      {{else}}
      %a.btn.btn-success.create Accomplish
      {{/if}}
      %a.btn(href="/achievements/{{_id}}/accomplish/text" title="Text")
        %i.icon-align-left
      %a.btn(href="/achievements/{{_id}}/accomplish/picture" title="Picture")
        %i.icon-picture
      -#%a.btn.(href="/achievements/{{_id}}/accomplish/video" title="Video")
        %i.icon-film
      -#%a.btn(href="/achievements/{{_id}}/accomplish/link" title="Link")
        %i.icon-bookmark
  {{/if}}
