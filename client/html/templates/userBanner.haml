%template(name='userBanner')
  .userBanner
    %a.refresh.pull-right
      %i.icon-refresh
    %a.profile-pic.pull-left(href='/{{session "username"}}')
      {{{pic}}}
    %h3.name.muted {{session "username"}}
    {{#if user}}
    {{#with user}}
    -#%span.level {{user.level}}
    .pull-right
      %h3.score.pull-right<
        -#%span.dollar.dollar-green
        %span {{score}}
    .about
      %em.bio {{bio}}
      .loc {{location}}
    {{/with}}
    {{else}}
    {{> loading}}
    {{/if}}

    .clearfix
    .row-fluid
      .span6
        %h5.muted Level
        %span {{currentUser.level}}
      .span6
        %h5.muted Rank
        %span {{currentUser.rank}}
