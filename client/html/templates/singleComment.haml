%template(name='singleComment')

  %ul.breadcrumb.well.well-mini
    {{#each breadcrumbs}}
    %li
      <a class="{{isMe user}}" href="{{url}}">{{name}}</a>
      %span.divider >
    {{/each}}

  %article.comment(id="comment-{{_id}}" class="{{nested}}")
    {{#if user}}
    %nav.icons.btn-group.pull-right
      {{#if isMe user}}
      %a.btn.btn-mini.edit(title="Edit")<
        <i class="icon-pencil {{isActive "editComment" _id}}"></i>
      {{/if}}
      %a.btn.btn-mini.replyy(title="Reply")<
        <i class="icon-share-alt {{isActive "addComment" "new"}}"></i>
      -#%li
        %a.remove(title="Remove")<
          <i class="icon-remove"></i>
    {{> userActivity}}
    {{> voteContainer}}
    {{/if}}
    .clearfix

    .text
      {{#if equals "editComment" _id}}
      .text-wrapper
        %textarea.edit-text.ta100(id="edit-{{_id}}" rows="4") {{text}}
      {{else}}
      %p {{{addLineBreaks text}}}
      {{/if}}

  .fold
    %h5.heading.line Replies
    {{> filter}}
    .clearfix
    {{> comments}}
