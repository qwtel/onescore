%template(name='userWidget')
  .userWidget
    %a.profile-pic.pull-left(href="/{{currentUser.username}}")
      {{{pic}}}
    %h3.name.muted {{currentUser.username}}
    %h3.score<
      -#%span.dollar.dollar-green
      %span {{currentUser.score}}
    .clearfix
    %h5.muted Level
    %span {{currentUser.level}}
    -#{{> progress}}
    %h5.muted Rank
    %span {{currentUser.rank}}
